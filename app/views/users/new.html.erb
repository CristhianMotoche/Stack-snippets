<h1>Loggin</h1>
<%= form_for :user, url: users_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_exaplanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        Nop
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  <%= f.label :username %><br>
  <%= f.text_field :username %>
  </p>

  <p>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
  </p>

  <p>
  <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', users_path %>
